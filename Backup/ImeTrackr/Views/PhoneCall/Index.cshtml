@model IEnumerable<ImeTrackr.Models.PhoneCall>

@{
    ViewBag.Title = "Phone Log";
}

<h2>Phone Log
</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            @Html.ActionLink("Plaintiff", "Index", new { sortOrder = ViewBag.PlaintiffSortParm })
        </th>
        <th>
            @Html.ActionLink("Contact", "Index", new { sortOrder = ViewBag.ContactSortParm })
        </th>
        <th>
            Message
        </th>
        <th>
            Needs F/U?
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Plaintiff.LastFirst)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contact.LastFirst)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Message)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsComplete)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
